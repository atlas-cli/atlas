{
  "name": "atlas",
  "version": "0.0.1",
  "description": "technology stack focused on value generation",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run install:integration",
    "install:integration": "(cd integration/hello-world && npm install)",
    "lint": "concurrently 'npm run lint:packages' 'npm run lint:spec'",
    "lint:spec": "eslint 'packages/**/**.spec.ts'",
    "lint:packages": "eslint 'packages/**/**.ts' --ignore-pattern 'packages/**/*.spec.ts'",
    "test": "jest packages",
    "test:integration": "jest integration",
    "build": "npm run build:packages",
    "build:integration": "tsc --build integration/tsconfig.json",
    "build:packages": "gulp build --dist node_modules/@atlas && npm run copy:integration",
    "copy:integration": "cp -R node_modules/@atlas integration/hello-world/node_modules",
    "build:prod": "gulp build",
    "deploy": "cdk deploy --outputs-file ./integration/hello-world/env.json --all",
    "destroy": "npm run atlas:destroy:application && npm run atlas:destroy:infrastructure",
    "coverage": "jest packages/ --coverage",
    "atlas:deploy:infrastructure": "npm run build:packages && npm run build:integration && cdk deploy --app 'node integration_dist/infrastructure.js' --all --outputs-file atlas-core-artifact.json",
    "atlas:deploy:application": "npm run build:packages && npm run build:integration && cdk deploy --app 'node integration_dist/infrastructure.js deploy application' --outputs-file ./integration/hello-world/env.json --all",
    "atlas:destroy:infrastructure": "yes | npx cdk destroy --app 'node integration_dist/infrastructure.js' || true",
    "atlas:destroy:application": "yes | npx cdk destroy --app 'node integration_dist/infrastructure.js deploy application' || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlas-cli/atlas.git"
  },
  "keywords": [
    "atlas",
    "nestjs",
    "nest",
    "angular",
    "framework",
    "stack",
    "atlascli"
  ],
  "author": "AtlasCLI",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atlas-cli/atlas/issues"
  },
  "homepage": "https://github.com/atlas-cli/atlas#readme",
  "devDependencies": {
    "@aws-sdk/client-eventbridge": "^3.159.0",
    "@aws-sdk/client-lambda": "^3.159.0",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-angular": "^17.1.0",
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/microservices": "^9.0.11",
    "@types/gulp": "^4.0.9",
    "@types/jest": "^28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "aws-cdk": "^2.42.1",
    "axios": "^0.27.2",
    "class-validator": "^0.13.2",
    "commitlint-circle": "^1.0.0",
    "concurrently": "^7.3.0",
    "esbuild": "^0.15.8",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "gulp": "^4.0.2",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^28.0.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.42.1",
    "constructs": "^10.1.108",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  }
}
