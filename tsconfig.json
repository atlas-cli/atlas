{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "useUnknownInCatchVariables": false,
      "resolveJsonModule": true,
      "target": "es6",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "lib": ["es7"],
      "paths": {
        "@atlas-org/microservices": ["./packages/microservices"],
        "@atlas-org/microservices/*": ["./packages/microservices/*"],
        "@atlas-org/infrastructure": ["./packages/infrastructure"],
        "@atlas-org/infrastructure/*": ["./packages/infrastructure/*"],
      }
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules", "cdk.out", "**/*.spec.ts", "integration_dist"],
  }
  